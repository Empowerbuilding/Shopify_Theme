          <span class="detail-style-badge" id="detail-style"></span>
        </div>
        <button class="detail-vote-btn" id="detail-vote-btn" onclick="toggleDetailVote()">
          <svg class="star-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
          </svg>
          <span class="vote-text">Vote</span>
          <span class="vote-count" id="detail-vote-count">0</span>
        </button>
      </div>
      <p class="detail-description" id="detail-description"></p>
      <div class="detail-specs">
        <div class="detail-spec">
          <div class="detail-spec-value" id="detail-beds">-</div>
          <div class="detail-spec-label">Beds</div>
        </div>
        <div class="detail-spec">
          <div class="detail-spec-value" id="detail-baths">-</div>
          <div class="detail-spec-label">Baths</div>
        </div>
        <div class="detail-spec">
          <div class="detail-spec-value" id="detail-sqft">-</div>
          <div class="detail-spec-label">Sq Ft</div>
        </div>
        <div class="detail-spec">
          <div class="detail-spec-value" id="detail-total-votes">0</div>
          <div class="detail-spec-label">Total Votes</div>
        </div>
      </div>
    </div>
  </div>
</div>

