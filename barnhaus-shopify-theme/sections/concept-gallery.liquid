  <div class="container">
    <!-- Header Area -->
    <div class="concept-gallery-header">
      <span class="concept-badge">{{ section.settings.badge_label }}</span>
      <h1 class="concept-gallery-title">{{ section.settings.title }}</h1>
      <p class="concept-gallery-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <!-- Controls -->
    <div class="concept-controls">
      <div class="sort-buttons">
        <button class="sort-btn active" data-sort="popular">Most Popular</button>
        <button class="sort-btn" data-sort="newest">Newest</button>
      </div>
    </div>

    <!-- Concepts Grid -->
    <div class="concepts-grid" id="concepts-grid">
      <div class="concepts-loading">
        <span class="spinner"></span>
        Loading concepts...
      </div>
    </div>
  </div>
</section>

<!-- Email Capture Modal -->
<div class="email-modal" id="email-modal">
  <div class="email-modal-overlay" onclick="closeEmailModal()"></div>
  <div class="email-modal-content">
    <div class="email-modal-icon">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
        <polyline points="22,6 12,13 2,6"></polyline>
      </svg>
    </div>
    <h2 class="email-modal-title">Get Notified!</h2>
    <p class="email-modal-subtitle">Your vote has been counted! Want to know when this concept becomes a real plan?</p>
    <form class="email-form" id="email-form" onsubmit="submitEmail(event)">
      <input type="email" class="email-input" id="email-input" placeholder="Enter your email" required>
      <label class="notify-checkbox">
        <input type="checkbox" id="notify-checkbox" checked>
        <span>Notify me when this plan is released</span>
      </label>
      <button type="submit" class="email-submit-btn">Submit & Continue</button>
      <button type="button" class="email-skip-btn" onclick="skipEmail()">Skip for now</button>
    </form>
  </div>
</div>

<!-- Concept Detail Modal -->
<div class="detail-modal" id="detail-modal">
  <div class="detail-modal-overlay" onclick="closeDetailModal()"></div>
  <div class="detail-modal-content">
    <button class="detail-modal-close" onclick="closeDetailModal()" aria-label="Close">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <div class="detail-image-wrapper" id="detail-image-wrapper" onclick="openConceptImageZoom()">
      <img class="detail-modal-image" id="detail-image" src="" alt="">
      <div class="detail-zoom-overlay">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="M21 21l-4.35-4.35"></path>
          <line x1="11" y1="8" x2="11" y2="14"></line>
          <line x1="8" y1="11" x2="14" y2="11"></line>
        </svg>
        <span>Tap to zoom</span>
      </div>
    </div>
    <!-- Stats bar below image - matches catalog style -->
    <div class="detail-stats">
      <div class="detail-stat-item">
        <span class="detail-stat-value" id="detail-beds">-</span>
        <span class="detail-stat-label">Beds</span>
      </div>
      <div class="detail-stat-item">
        <span class="detail-stat-value" id="detail-baths">-</span>
        <span class="detail-stat-label">Baths</span>
      </div>
      <div class="detail-stat-item">
        <span class="detail-stat-value" id="detail-sqft">-</span>
        <span class="detail-stat-label">Sq Ft</span>
      </div>
    </div>
    <div class="detail-modal-body">
      <h2 class="detail-modal-title" id="detail-title"></h2>
      <p class="detail-description" id="detail-description"></p>
      <div class="detail-vote-section">
        <button class="detail-vote-btn" id="detail-vote-btn" onclick="toggleDetailVote()">
          <svg class="star-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
          </svg>
          <span class="vote-text">Vote for this concept</span>
        </button>
        <span class="detail-vote-count"><span id="detail-total-votes">0</span> votes</span>
      </div>
    </div>
  </div>
</div>

<!-- Image Zoom Modal -->
<div class="image-zoom-modal" id="concept-zoom-modal">
  <div class="zoom-modal-overlay" onclick="closeConceptImageZoom()"></div>
  <div class="zoom-modal-content">
    <button class="zoom-close" onclick="closeConceptImageZoom()" aria-label="Close">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <img src="" alt="" class="zoom-image" id="concept-zoom-image">
    <div class="zoom-hint-text">
      <span class="desktop-hint">Scroll to zoom &bull; Drag to pan</span>
      <span class="mobile-hint">Pinch to zoom &bull; Drag to pan</span>
    </div>
  </div>
</div>

{% render 'plan-modal-styles' %}

<!-- Load Supabase -->
<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>

<!-- Load Concept Gallery JavaScript -->
<script src="{{ 'concept-gallery.js' | asset_url }}" defer></script>

