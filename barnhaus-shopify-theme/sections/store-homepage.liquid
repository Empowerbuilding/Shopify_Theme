  display: none;
}

.carousel-card-price {
  color: #B8860B;
  font-size: 1.5rem;
  font-weight: 700;
}

.carousel-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400px;
  width: 100%;
}

/* Carousel Mobile Responsive */
@media (max-width: 768px) {
  .product-carousel-section {
    padding: 3rem 0;
  }
  
  .carousel-header {
    justify-content: center;
    margin-bottom: 1.5rem;
  }
  
  .carousel-title {
    font-size: 1.75rem;
    text-align: center;
  }
  
  .carousel-footer {
    margin-top: 1.5rem;
  }
  
  .carousel-container {
    margin: 0 -1rem;
  }
  
