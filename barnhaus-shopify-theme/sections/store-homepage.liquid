  background: #2A2A2A;
  border: 1px solid #3A3A3A;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
  text-decoration: none;
  display: flex;
  flex-direction: column;
}

.carousel-card:hover {
  border-color: #B8860B;
  box-shadow: 0 8px 25px rgba(184, 134, 11, 0.3);
  transform: translateY(-5px);
}

.carousel-card-image {
  width: 100%;
  height: 320px;
  object-fit: contain;
  background: #1C1C1C;
