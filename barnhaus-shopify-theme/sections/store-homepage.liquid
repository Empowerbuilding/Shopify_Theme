<script>
// Load products into carousel
document.addEventListener('DOMContentLoaded', function() {
  const carouselTrack = document.getElementById('carousel-track');
  
  // Fetch products from Shopify collection
  fetch('/collections/floor-plans/products.json?limit=20')
    .then(response => response.json())
    .then(data => {
      if (data.products && data.products.length > 0) {
        carouselTrack.innerHTML = '';
        
        // Define the priority order for first 4 products
        const priorityOrder = ['pedernales', 'serenity', 'whiskey', 'york-creek'];
        
        // Separate priority products and remaining products
        const priorityProducts = [];
        const otherProducts = [];
        
        data.products.forEach(product => {
          const handle = product.handle.toLowerCase();
          const priorityIndex = priorityOrder.findIndex(name => handle.includes(name));
          
          if (priorityIndex !== -1) {
            priorityProducts[priorityIndex] = product;
          } else {
            otherProducts.push(product);
          }
        });
        
        // Combine: priority products first (in order), then others
        const orderedProducts = priorityProducts.filter(p => p).concat(otherProducts).slice(0, 8);
        
        orderedProducts.forEach(product => {
          const card = document.createElement('a');
          card.href = `/products/${product.handle}`;
          card.className = 'carousel-card';
          
          // Get accurate specs from authoritative data
          const specs = window.FloorPlansData ? window.FloorPlansData.getSpecs(product.handle) : null;
          let specsHTML = '';
          
          if (specs) {
            const beds = specs.beds || '‚Äî';
            const baths = specs.baths || '‚Äî';
            const sqft = specs.area ? window.FloorPlansData.formatArea(specs.area) : '‚Äî';
            
            specsHTML = `
              <div class="carousel-card-specs">
                <span><strong>${beds}</strong> Beds</span>
                <span><strong>${baths}</strong> Baths</span>
                <span><strong>${sqft}</strong> SF</span>
              </div>
            `;
          }
          
          // Format price the same way as catalog page
          const variant = product.variants[0];
          const price = variant && variant.price 
            ? parseFloat(variant.price).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })
            : '0.00';
          
          card.innerHTML = `
            <img src="${product.images[0]?.src || ''}" 
                 alt="${product.title}" 
                 class="carousel-card-image">
            <div class="carousel-card-content">
              <h3 class="carousel-card-title">${product.title}</h3>
              ${specsHTML}
              <div class="carousel-card-price">$${price}</div>
            </div>
          `;
          
          carouselTrack.appendChild(card);
        });
      }
    })
    .catch(error => {
      console.error('Error loading products:', error);
      carouselTrack.innerHTML = '<p style="color: #D1D5DB; text-align: center; width: 100%;">Unable to load products</p>';
    });
});

// Extract specs from product title or tags (not currently used in carousel)
function extractSpecs(product) {
  const specs = [];
  const title = product.title.toLowerCase();
  
  // Try to extract dimensions from title
  const sizeMatch = title.match(/(\d+)\s*x\s*(\d+)/);
  if (sizeMatch) {
    specs.push(`<span>üìê ${sizeMatch[1]}' x ${sizeMatch[2]}'</span>`);
  }
  
  // Try to extract bedrooms
  const bedMatch = title.match(/(\d+)\s*bed/i);
  if (bedMatch) {
    specs.push(`<span>üõèÔ∏è ${bedMatch[1]} Bed</span>`);
  }
  
  // Try to extract bathrooms
  const bathMatch = title.match(/(\d+(?:\.\d+)?)\s*bath/i);
  if (bathMatch) {
    specs.push(`<span>üöø ${bathMatch[1]} Bath</span>`);
  }
  
  return specs.join('');
}
