    flex: 0 0 280px;
  }
  
  .carousel-card-image {
    height: 280px;
  }
  
  .carousel-card-content {
    padding: 1rem;
  }
  
  .carousel-card-title {
    font-size: 1rem;
  }
  
  .carousel-card-price {
    font-size: 1.35rem;
  }
}

