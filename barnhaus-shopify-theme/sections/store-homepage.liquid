<style>
/* Store Homepage Styles */
.store-homepage {
  background: #1C1C1C;
}

/* Page Width Container - Aligns with header (1200px) */
.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

/* Hero Section */
.hero-section {
  position: relative;
  height: 60vh;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-top: 0;
  padding-top: 0;
}

.hero-image-wrapper {
  position: absolute;
  inset: 0;
  background: #1C1C1C;
}

.hero-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  background: #1C1C1C;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom, rgba(28, 28, 28, 0.3), rgba(28, 28, 28, 0.4));
}

.hero-content {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  padding: 2rem;
}

.hero-tagline {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1C1C1C;
  margin: 0;
  letter-spacing: 1px;
  text-shadow: 
    0 0 20px rgba(255, 255, 255, 0.9),
    0 0 40px rgba(255, 255, 255, 0.7),
    0 0 60px rgba(255, 255, 255, 0.5),
    0 0 80px rgba(255, 255, 255, 0.3),
    0 0 100px rgba(255, 255, 255, 0.2);
  filter: drop-shadow(0 0 30px rgba(255, 255, 255, 0.8))
          drop-shadow(0 0 50px rgba(255, 255, 255, 0.5));
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .hero-section {
    height: 75vh;
    min-height: 400px;
    margin-top: 0;
    padding-top: 0;
  }
  
  .hero-content {
    padding: 1.5rem;
  }
  
  .hero-tagline {
    font-size: 1.75rem;
    text-shadow: 
      0 0 15px rgba(255, 255, 255, 0.9),
      0 0 30px rgba(255, 255, 255, 0.7),
      0 0 45px rgba(255, 255, 255, 0.5),
      0 0 60px rgba(255, 255, 255, 0.3);
    filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.8))
            drop-shadow(0 0 40px rgba(255, 255, 255, 0.5));
  }
  
  /* Ensure video starts at very top */
  .hero-image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
}

/* Horizontal Product Carousel */
.product-carousel-section {
  padding: 4rem 0;
  background: #1C1C1C;
  overflow: hidden;
}

.carousel-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 2rem;
}

.carousel-title {
  font-size: 2.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.carousel-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 2rem;
}

.view-all-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  color: #1C1C1C;
  font-weight: 700;
  font-size: 0.9375rem;
  text-decoration: none;
  transition: all 0.3s ease;
  border-radius: 8px;
  border: 2px solid transparent;
  box-shadow: 0 4px 12px rgba(184, 134, 11, 0.3);
}

.view-all-link:hover {
  background: linear-gradient(135deg, #FFD700 0%, #B8860B 100%);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(184, 134, 11, 0.5);
  gap: 0.875rem;
}

.view-all-link svg {
  transition: transform 0.3s ease;
  stroke-width: 2.5;
}

.view-all-link:hover svg {
  transform: translateX(4px);
}

.carousel-container {
  position: relative;
  margin: 0 -1.5rem;
}

.carousel-track {
  display: flex;
  gap: 1.5rem;
  overflow-x: auto;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
  scrollbar-color: #B8860B #2A2A2A;
  padding: 0 1.5rem 1rem 1.5rem;
}

.carousel-track::-webkit-scrollbar {
  height: 8px;
}

.carousel-track::-webkit-scrollbar-track {
  background: #2A2A2A;
  border-radius: 4px;
}

.carousel-track::-webkit-scrollbar-thumb {
  background: #B8860B;
  border-radius: 4px;
}

