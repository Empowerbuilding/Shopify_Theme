            <div class="step-number">03</div>
            <h3 class="step-title">Build Your Dream</h3>
            <p class="step-description">Take your plans to your builder or contractor and start construction. Our detailed plans make the building process smooth and efficient.</p>
            <ul class="step-features">
              <li>‚úì Builder-approved format</li>
              <li>‚úì Permit-ready documents</li>
              <li>‚úì Ongoing support included</li>
            </ul>
          </div>
        </div>
      </div>
      
      <div class="how-it-works-cta">
        <a href="/pages/plans" class="cta-button-primary">
          Start Browsing Plans
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Social Proof Section -->
  <section class="social-proof-section">
    <div class="page-width">
      <!-- Featured Project Video -->
      <div class="featured-project-container">
        <div class="featured-project-video">
          <div class="video-wrapper">
            <video 
              id="featured-project-video"
              class="featured-video"
              loop
              muted
              playsinline
              preload="metadata"
            >
              <source src="https://hbfjdfxephlczkfgpceg.supabase.co/storage/v1/object/public/website/demos/Untitled%20video%20-%20Made%20with%20Clipchamp%20(19)%20(1).mp4" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </div>
          <div class="featured-project-info">
            <h3>Spring Mountain Estate</h3>
            <p class="project-location">üìç Hill Country, Texas</p>
            <p class="project-description">A stunning 4,500 sq ft custom home featuring modern industrial design with panoramic hill country views.</p>
          </div>
        </div>
      </div>

      <script>
        // Auto-play video when it comes into view
        document.addEventListener('DOMContentLoaded', function() {
          const video = document.getElementById('featured-project-video');
          
          // Use Intersection Observer to start playing when visible
          const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                // Video is in view - play it
                video.play().catch(error => {
                  console.log('Autoplay prevented:', error);
                });
              } else {
                // Video is out of view - pause it to save resources
                video.pause();
              }
            });
          }, { threshold: 0.25 }); // Play when 25% visible
          
          observer.observe(video);
        });
      </script>
    </div>
  </section>

