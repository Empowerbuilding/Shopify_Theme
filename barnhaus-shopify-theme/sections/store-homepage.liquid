   HOW IT WORKS SECTION
   =================================== */

.how-it-works-section {
  padding: 4rem 0;
  background: linear-gradient(135deg, #1a1a1a 0%, #252525 100%);
  text-align: center;
}

.how-it-works-section .section-title {
  margin-bottom: 0.5rem;
}

.how-it-works-section .section-subtitle {
  margin-bottom: 3rem;
}

.steps-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

.step-card {
  background: #1C1C1C;
  border: 2px solid #B8860B;
  border-radius: 16px;
  padding: 2.5rem 2rem;
  transition: all 0.4s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 12px rgba(184, 134, 11, 0.25), 0 0 24px rgba(184, 134, 11, 0.1);
  animation: pulse-glow 3s ease-in-out infinite;
}

.step-content {
  display: contents;
}

.step-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #B8860B 0%, #FFD700 100%);
  transform: scaleX(0);
  transition: transform 0.4s ease;
}

.step-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 0 20px rgba(184, 134, 11, 0.5), 0 12px 32px rgba(184, 134, 11, 0.25);
}

.step-card:hover::before {
  transform: scaleX(1);
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 12px rgba(184, 134, 11, 0.25), 0 0 24px rgba(184, 134, 11, 0.1);
  }
  50% {
    box-shadow: 0 0 16px rgba(184, 134, 11, 0.35), 0 0 32px rgba(184, 134, 11, 0.15);
  }
}

.step-icon {
  width: 80px;
