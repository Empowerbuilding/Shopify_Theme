{% comment %}
  Cost Calculator Section - Uses CSS zoom to hide header naturally
{% endcomment %}

<section class="calculator-section" style="background: #1C1C1C; padding: 0; margin: 0;">
  <div class="page-width" style="max-width: 100%; padding: 0; margin: 0;">
    <div class="calculator-embed" style="background: #1C1C1C; padding: 0; overflow: hidden; margin: 0;">
      <div class="calculator-wrapper">
        <iframe 
          id="cost-calculator-iframe"
          src="{{ section.settings.calculator_url }}" 
          width="100%" 
          height="{{ section.settings.iframe_height }}px"
          frameborder="0"
          scrolling="no"
          style="border: none; display: block; width: 100%;"
          title="Construction Cost Calculator"
          loading="lazy"
        ></iframe>
        
        {% if section.settings.show_loading %}
        <div id="calculator-loading" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; pointer-events: none; z-index: 10;">
          <div style="width: 50px; height: 50px; border: 4px solid #DAA520; border-top-color: transparent; border-radius: 50%; animation: spin 1s linear infinite;"></div>
          <p style="color: #DAA520; margin-top: 15px; font-weight: bold;">Loading Calculator...</p>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Remove default spacing */
  .calculator-section,
  .calculator-section .page-width,
  .calculator-embed {
    padding: 0 !important;
    margin: 0 !important;
  }

  .calculator-wrapper {
    position: relative;
    overflow: hidden;
    background: #1C1C1C;
  }

  /* Desktop - zoom and position to hide header naturally */
  #cost-calculator-iframe {
    transform-origin: top center;
    transform: scale(1.15) translateY(-120px);
    width: 100%;
  }

  /* Tablet - adjust zoom and position */
  @media screen and (max-width: 768px) {
    #cost-calculator-iframe {
      height: 2800px !important;
      transform: scale(1.12) translateY(-100px);
    }
    
    .calculator-wrapper {
      height: 2500px;
    }
  }

  /* Mobile - more aggressive zoom to hide header */
  @media screen and (max-width: 480px) {
    #cost-calculator-iframe {
      height: 3200px !important;
      transform: scale(1.08) translateY(-80px);
    }
    
    .calculator-wrapper {
      height: 2900px;
    }
  }

  /* Small phones - fine tune */
  @media screen and (max-width: 375px) {
    #cost-calculator-iframe {
      height: 3400px !important;
      transform: scale(1.06) translateY(-70px);
    }
    
    .calculator-wrapper {
      height: 3100px;
    }
  }
</style>

<script>
  (function() {
    // Hide loading spinner once iframe loads
    {% if section.settings.show_loading %}
    var iframe = document.getElementById('cost-calculator-iframe');
    if (iframe) {
      iframe.addEventListener('load', function() {
        var loader = document.getElementById('calculator-loading');
        if (loader) {
          loader.style.opacity = '0';
          setTimeout(function() {
            loader.style.display = 'none';
          }, 300);
        }
      });
    }
    {% endif %}

    // Listen for height messages from calculator
    window.addEventListener('message', function(e) {
      if (e.data && e.data.type === 'calculator-height') {
        var iframe = document.getElementById('cost-calculator-iframe');
        if (iframe && e.data.height) {
          var wrapper = document.querySelector('.calculator-wrapper');
          if (wrapper && window.innerWidth > 768) {
            // Adjust wrapper height based on content
            wrapper.style.height = (e.data.height * 1.15 - 120) + 'px';
          }
        }
      }
    }, false);

    // Recalculate on orientation change
    window.addEventListener('orientationchange', function() {
      setTimeout(function() {
        location.reload();
      }, 100);
    });
  })();
</script>

{% schema %}
{
  "name": "Cost Calculator",
  "settings": [
    {
      "type": "header",
      "content": "Calculator Settings"
    },
    {
      "type": "text",
      "id": "calculator_url",
      "label": "Calculator URL",
      "default": "https://barnhaussteelbuilders.com/cost-calculator",
      "info": "Full URL to your cost calculator"
    },
    {
      "type": "range",
      "id": "iframe_height",
      "min": 1000,
      "max": 4000,
      "step": 100,
      "unit": "px",
      "label": "Calculator Height (Desktop)",
      "default": 2400,
      "info": "Adjust if calculator is cut off or has too much space on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_loading",
      "label": "Show loading spinner",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Cost Calculator",
      "category": "Tools"
    }
  ]
}
{% endschema %}
