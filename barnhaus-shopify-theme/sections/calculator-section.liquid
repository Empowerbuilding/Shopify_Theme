{% comment %}
  Cost Calculator Section - Properly hides embedded header
{% endcomment %}

<section class="calculator-section" style="background: #1C1C1C; padding: 0; margin: 0;">
  <div class="page-width" style="max-width: 100%; padding: 0; margin: 0;">
    <div class="calculator-embed" style="background: #1C1C1C; padding: 0; overflow: hidden; margin: 0; position: relative;">
      <div class="calculator-wrapper" style="position: relative; margin: 0;">
        <iframe 
          id="cost-calculator-iframe"
          src="{{ section.settings.calculator_url }}" 
          width="100%" 
          height="{{ section.settings.iframe_height }}px"
          frameborder="0"
          scrolling="no"
          style="border: none; display: block; width: 100%; margin: 0;"
          title="Construction Cost Calculator"
          loading="lazy"
        ></iframe>
        
        {% if section.settings.show_loading %}
        <div id="calculator-loading" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; pointer-events: none;">
          <div style="width: 50px; height: 50px; border: 4px solid #DAA520; border-top-color: transparent; border-radius: 50%; animation: spin 1s linear infinite;"></div>
          <p style="color: #DAA520; margin-top: 15px; font-weight: bold;">Loading Calculator...</p>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Remove any default padding/margins */
  .calculator-section,
  .calculator-section .page-width,
  .calculator-embed,
  .calculator-wrapper {
    padding: 0 !important;
    margin: 0 !important;
  }

  .calculator-section iframe {
    max-width: 100%;
  }

  /* Create an overlay to hide the embedded header */
  .calculator-embed::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100px; /* Height of embedded header to hide */
    background: #1C1C1C;
    z-index: 10;
    pointer-events: none;
  }

  /* Desktop - hide embedded header */
  #cost-calculator-iframe {
    margin-top: -100px;
    position: relative;
    z-index: 1;
  }

  /* Tablet adjustments */
  @media screen and (max-width: 768px) {
    .calculator-embed::before {
      height: 80px; /* Adjust overlay height for tablet */
    }
    
    #cost-calculator-iframe {
      height: 2500px !important;
      margin-top: -80px !important;
    }
  }

  /* Mobile adjustments */
  @media screen and (max-width: 480px) {
    .calculator-embed::before {
      height: 150px; /* Larger overlay for mobile to hide entire embedded header/nav */
    }
    
    #cost-calculator-iframe {
      height: 2800px !important;
      margin-top: -150px !important; /* Match the overlay height */
    }
  }

  /* Extra small phones */
  @media screen and (max-width: 375px) {
    .calculator-embed::before {
      height: 140px;
    }
    
    #cost-calculator-iframe {
      height: 3000px !important;
      margin-top: -140px !important;
    }
  }
</style>

<script>
  (function() {
    // Hide loading spinner once iframe loads
    {% if section.settings.show_loading %}
    var iframe = document.getElementById('cost-calculator-iframe');
    if (iframe) {
      iframe.addEventListener('load', function() {
        var loader = document.getElementById('calculator-loading');
        if (loader) {
          loader.style.opacity = '0';
          setTimeout(function() {
            loader.style.display = 'none';
          }, 300);
        }
      });
    }
    {% endif %}

    // Listen for height messages from calculator
    window.addEventListener('message', function(e) {
      if (e.data && e.data.type === 'calculator-height') {
        var iframe = document.getElementById('cost-calculator-iframe');
        if (iframe && e.data.height) {
          var adjustment = window.innerWidth <= 480 ? 150 : window.innerWidth <= 768 ? 80 : 100;
          iframe.style.height = (e.data.height - adjustment) + 'px';
        }
      }
    }, false);

    // Recalculate on orientation change
    window.addEventListener('orientationchange', function() {
      setTimeout(function() {
        var iframe = document.getElementById('cost-calculator-iframe');
        if (iframe) {
          if (window.innerWidth <= 480) {
            iframe.style.height = '2800px';
          } else if (window.innerWidth <= 768) {
            iframe.style.height = '2500px';
          }
        }
      }, 100);
    });
  })();
</script>

{% schema %}
{
  "name": "Cost Calculator",
  "settings": [
    {
      "type": "header",
      "content": "Calculator Settings"
    },
    {
      "type": "text",
      "id": "calculator_url",
      "label": "Calculator URL",
      "default": "https://barnhaussteelbuilders.com/cost-calculator?source=shopify",
      "info": "Full URL to your cost calculator"
    },
    {
      "type": "range",
      "id": "iframe_height",
      "min": 1000,
      "max": 3500,
      "step": 100,
      "unit": "px",
      "label": "Calculator Height (Desktop)",
      "default": 2200,
      "info": "Adjust if calculator is cut off or has too much space on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_loading",
      "label": "Show loading spinner",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Cost Calculator",
      "category": "Tools"
    }
  ]
}
{% endschema %}
