[
  {
    "name": "theme_info",
    "theme_name": "Barnhaus Steel Builders",
    "theme_version": "1.0.0",
    "theme_author": "Barnhaus",
    "theme_documentation_url": "https://github.com/barnhaus/shopify-theme",
    "theme_support_url": "https://support.barnhaus.com"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image",
        "info": "Recommended size: 200px x 60px"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 200
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Recommended size: 32px x 32px"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Theme Colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#1C1C1C"
      },
      {
        "type": "color",
        "id": "color_primary_gold",
        "label": "Primary Gold",
        "default": "#B8860B"
      },
      {
        "type": "color",
        "id": "color_gold_dark",
        "label": "Dark Gold",
        "default": "#966F09"
      },
      {
        "type": "color",
        "id": "color_card_bg",
        "label": "Card Background",
        "default": "#2A2A2A"
      },
      {
        "type": "color",
        "id": "color_text_gray",
        "label": "Text Gray",
        "default": "#D1D5DB"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border Color",
        "default": "#3A3A3A"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Settings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading font",
        "info": "Used for headings and titles"
      },
      {
        "type": "font_picker",
        "id": "type_base_font",
        "default": "assistant_n4",
        "label": "Body font",
        "info": "Used for body text and paragraphs"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Base font size",
        "default": 16
      }
    ]
  },
  {
    "name": "Product",
    "settings": [
      {
        "type": "header",
        "content": "Product Grid"
      },
      {
        "type": "select",
        "id": "product_grid_columns",
        "label": "Products per row (desktop)",
        "options": [
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          }
        ],
        "default": "4"
      },
      {
        "type": "checkbox",
        "id": "product_show_vendor",
        "label": "Show product vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_show_compare_price",
        "label": "Show compare at price",
        "default": true
      },
      {
        "type": "header",
        "content": "Product Page"
      },
      {
        "type": "checkbox",
        "id": "product_enable_zoom",
        "label": "Enable image zoom",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Cart Settings"
      },
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          }
        ],
        "default": "page"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Media Accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/yourbrand"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourbrand"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/yourbrand"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/yourbrand"
      },
      {
        "type": "text",
        "id": "social_linkedin_link",
        "label": "LinkedIn",
        "info": "https://linkedin.com/company/yourbrand"
      },
      {
        "type": "header",
        "content": "Social Sharing Image"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Image",
        "info": "Recommended size: 1200px x 630px. Used for social media sharing."
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "header",
        "content": "Search Settings"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "label": "Enable predictive search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "label": "Show vendor in search results",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "label": "Show price in search results",
        "default": true
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "Footer Settings"
      },
      {
        "type": "checkbox",
        "id": "footer_show_social",
        "label": "Show social media icons",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "footer_show_payment_icons",
        "label": "Show payment icons",
        "default": true
      },
      {
        "type": "text",
        "id": "footer_copyright_text",
        "label": "Copyright text",
        "default": "Â© 2024 Barnhaus Steel Builders. All rights reserved."
      }
    ]
  }
]

