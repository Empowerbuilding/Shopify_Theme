{% comment %}
  Plan Detail Snippet
  Displays individual floor plan details with image zoom
{% endcomment %}

<style>
/* Product Detail Page Styles */
.plan-detail-wrapper {
  padding: 2rem 0;
  min-height: 60vh;
}

.plan-detail-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  margin-top: 2rem;
}

/* Image Section */
.plan-detail-image-section {
  position: sticky;
  top: 2rem;
  height: fit-content;
}

.plan-image-wrapper {
  position: relative;
  background: #f5f5f5;
  border-radius: 12px;
  overflow: hidden;
  cursor: zoom-in;
  aspect-ratio: 4/3;
  transition: all 0.3s ease;
}

.plan-image-wrapper:hover {
  box-shadow: 0 8px 24px rgba(184, 134, 11, 0.3);
}

.plan-detail-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.plan-image-wrapper:hover .plan-detail-image {
  transform: scale(1.05);
}

.zoom-hint {
  position: absolute;
  bottom: 1rem;
  right: 1rem;
  background: rgba(28, 28, 28, 0.9);
  color: white;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.plan-image-wrapper:hover .zoom-hint {
  opacity: 1;
}

.zoom-hint svg {
  flex-shrink: 0;
}

/* Info Section */
.plan-detail-info {
  padding: 1rem 0;
}

.plan-detail-title {
  font-size: 2.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 2rem;
  line-height: 1.2;
}

.plan-specs-large {
  display: flex;
  gap: 2rem;
  margin-bottom: 2rem;
  padding: 1.5rem;
  background: #2A2A2A;
  border-radius: 8px;
  border: 1px solid #3A3A3A;
}

.spec-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex: 1;
}

.spec-icon {
  font-size: 2rem;
  flex-shrink: 0;
}

.spec-text {
  display: flex;
  flex-direction: column;
}

.spec-value {
  font-size: 1.75rem;
  font-weight: 700;
  color: #B8860B;
  line-height: 1;
}

.spec-label {
  font-size: 0.9rem;
  color: #D1D5DB;
  margin-top: 0.25rem;
}

.plan-description {
  margin-bottom: 2rem;
  color: #D1D5DB;
  line-height: 1.8;
  font-size: 1.05rem;
}

.plan-description p {
  margin: 0;
}

.plan-features-section {
  margin-bottom: 2rem;
}

.plan-features-section h3 {
  font-size: 1.25rem;
  font-weight: 700;
  color: white;
  margin-bottom: 1rem;
}

.plan-features-list {
  list-style: none;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.75rem;
  margin: 0;
  padding: 0;
}

.plan-features-list li {
  color: #D1D5DB;
  padding: 0.75rem 1rem;
  background: #2A2A2A;
  border-radius: 6px;
  border: 1px solid #3A3A3A;
  font-size: 0.95rem;
  transition: all 0.2s ease;
}

.plan-features-list li:hover {
  border-color: #B8860B;
  background: rgba(184, 134, 11, 0.1);
}

.plan-features-list li:before {
  content: "âœ“ ";
  color: #B8860B;
  font-weight: bold;
  margin-right: 0.5rem;
}

.plan-pricing-section {
  background: linear-gradient(135deg, rgba(184, 134, 11, 0.1) 0%, rgba(255, 215, 0, 0.05) 100%);
  padding: 1.5rem;
  border-radius: 8px;
  margin-bottom: 2rem;
  border: 1px solid rgba(184, 134, 11, 0.3);
}

.plan-price {
  font-size: 2rem;
  font-weight: 700;
  color: #B8860B;
  margin-bottom: 0.5rem;
}

.price-note {
  color: #D1D5DB;
  font-size: 0.9rem;
  margin: 0;
}

.plan-actions {
  display: flex;
  gap: 1rem;
  margin-bottom: 2rem;
}

.btn-large {
  padding: 1rem 2rem;
  font-size: 1.05rem;
  flex: 1;
  text-align: center;
  justify-content: center;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
}

.btn-secondary {
  background: #3A3A3A;
  border: 1px solid #4A4A4A;
}

.btn-secondary:hover {
  background: #4A4A4A;
  opacity: 1;
}

.back-link {
  color: #B8860B;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  text-decoration: none;
  font-size: 1rem;
  transition: opacity 0.2s;
}

.back-link:hover {
  opacity: 0.8;
}

/* Image Zoom Modal */
.image-zoom-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.image-zoom-modal.active {
  opacity: 1;
}

.zoom-modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.95);
  cursor: pointer;
}

.zoom-modal-content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
}

.zoom-close {
  position: absolute;
  top: 2rem;
  right: 2rem;
  background: rgba(255, 255, 255, 0.1);
  border: none;
  color: white;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  z-index: 10001;
  backdrop-filter: blur(10px);
}

.zoom-close:hover {
  background: rgba(184, 134, 11, 0.8);
  transform: rotate(90deg);
}

.zoom-image {
  max-width: 90%;
  max-height: 90%;
  object-fit: contain;
  cursor: grab;
  transition: transform 0.1s ease-out;
  touch-action: none;
  user-select: none;
  -webkit-user-select: none;
}

.zoom-image:active {
  cursor: grabbing;
}

.zoom-hint-text {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  color: white;
  background: rgba(0, 0, 0, 0.7);
  padding: 0.75rem 1.5rem;
  border-radius: 20px;
  font-size: 0.9rem;
  backdrop-filter: blur(10px);
  pointer-events: none;
}

.loading-message {
  text-align: center;
  color: #D1D5DB;
  padding: 4rem 2rem;
  font-size: 1.125rem;
}

/* Mobile Responsive */
@media (max-width: 1024px) {
  .plan-detail-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .plan-detail-image-section {
    position: static;
  }
  
  .plan-specs-large {
    flex-wrap: wrap;
  }
  
  .plan-features-list {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .plan-detail-wrapper {
    padding: 1rem 0;
  }
  
  .plan-detail-title {
    font-size: 2rem;
  }
  
  .plan-specs-large {
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
  }
  
  .spec-value {
    font-size: 1.5rem;
  }
  
  .plan-features-list {
    grid-template-columns: 1fr;
  }
  
  .plan-actions {
    flex-direction: column;
  }
  
  .btn-large {
    width: 100%;
  }
  
  .zoom-modal-content {
    padding: 1rem;
  }
  
  .zoom-image {
    max-width: 95%;
    max-height: 95%;
  }
  
  .zoom-close {
    top: 1rem;
    right: 1rem;
    width: 40px;
    height: 40px;
  }
  
  .zoom-hint-text {
    bottom: 1rem;
    font-size: 0.8rem;
    padding: 0.5rem 1rem;
  }
}

/* Prevent body scroll when modal is open */
body:has(.image-zoom-modal) {
  overflow: hidden;
}
</style>

<div class="page-width">
  <div id="plan-detail-container" class="plan-detail-wrapper">
    <div class="loading-message">
      <svg width="40" height="40" viewBox="0 0 40 40" style="margin: 0 auto 1rem; display: block;">
        <circle cx="20" cy="20" r="18" fill="none" stroke="#3A3A3A" stroke-width="4"/>
        <circle cx="20" cy="20" r="18" fill="none" stroke="#B8860B" stroke-width="4" stroke-dasharray="90, 150" stroke-linecap="round">
          <animateTransform attributeName="transform" type="rotate" from="0 20 20" to="360 20 20" dur="1s" repeatCount="indefinite"/>
        </circle>
      </svg>
      Loading plan details...
    </div>
  </div>
</div>

<script src="{{ 'plan-detail.js' | asset_url }}" defer></script>

