{% comment %}
  Cost Calculator Section - Clean version without CTA
{% endcomment %}

<section class="calculator-section" style="background: #1C1C1C; padding: 0;">
  <div class="page-width" style="max-width: 100%; padding: 0;">
    <div class="calculator-embed" style="background: #1C1C1C; padding: 0; overflow: hidden;">
      <div class="calculator-wrapper" style="position: relative;">
        <iframe 
          id="cost-calculator-iframe"
          src="{{ section.settings.calculator_url }}" 
          width="100%" 
          height="{{ section.settings.iframe_height }}px"
          frameborder="0"
          scrolling="no"
          style="border: none; display: block; width: 100%;"
          title="Construction Cost Calculator"
          loading="lazy"
        ></iframe>
        
        {% if section.settings.show_loading %}
        <div id="calculator-loading" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; pointer-events: none;">
          <div style="width: 50px; height: 50px; border: 4px solid #DAA520; border-top-color: transparent; border-radius: 50%; animation: spin 1s linear infinite;"></div>
          <p style="color: #DAA520; margin-top: 15px; font-weight: bold;">Loading Calculator...</p>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .calculator-section iframe {
    max-width: 100%;
  }

  /* Hide the header and navigation inside the iframe */
  #cost-calculator-iframe {
    margin-top: -100px; /* Adjusted to show the title */
  }

  @media screen and (max-width: 768px) {
    #cost-calculator-iframe {
      height: 2500px !important;
      margin-top: -80px; /* Adjust for mobile */
    }
  }

  @media screen and (max-width: 480px) {
    #cost-calculator-iframe {
      height: 3000px !important;
      margin-top: -60px;
    }
  }
</style>

<script>
  (function() {
    // Hide loading spinner once iframe loads
    {% if section.settings.show_loading %}
    var iframe = document.getElementById('cost-calculator-iframe');
    if (iframe) {
      iframe.addEventListener('load', function() {
        var loader = document.getElementById('calculator-loading');
        if (loader) {
          loader.style.opacity = '0';
          setTimeout(function() {
            loader.style.display = 'none';
          }, 300);
        }
      });
    }
    {% endif %}

    // Listen for height messages from calculator
    window.addEventListener('message', function(e) {
      if (e.data && e.data.type === 'calculator-height') {
        var iframe = document.getElementById('cost-calculator-iframe');
        if (iframe && e.data.height) {
          iframe.style.height = (e.data.height - 100) + 'px';
        }
      }
    }, false);
  })();
</script>

{% schema %}
{
  "name": "Cost Calculator",
  "settings": [
    {
      "type": "header",
      "content": "Calculator Settings"
    },
    {
      "type": "text",
      "id": "calculator_url",
      "label": "Calculator URL",
      "default": "https://barnhaussteelbuilders.com/cost-calculator?source=shopify",
      "info": "Full URL to your cost calculator"
    },
    {
      "type": "range",
      "id": "iframe_height",
      "min": 1000,
      "max": 3500,
      "step": 100,
      "unit": "px",
      "label": "Calculator Height",
      "default": 2200,
      "info": "Adjust if calculator is cut off or has too much space"
    },
    {
      "type": "checkbox",
      "id": "show_loading",
      "label": "Show loading spinner",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Cost Calculator",
      "category": "Tools"
    }
  ]
}
{% endschema %}



