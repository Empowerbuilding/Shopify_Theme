{% comment %}
  Main Collection Section
  Displays collection products in a grid layout
{% endcomment %}

<section class="collection-page">
  <div class="container">
    <!-- Collection Header -->
    <div class="collection-header">
      <h1 class="collection-title">{{ collection.title }}</h1>
      
      {% if collection.description != blank %}
        <div class="collection-description">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>
    
    <!-- Collection Toolbar -->
    <div class="collection-toolbar">
      <div class="collection-count">
        {% if collection.products_count > 0 %}
          {{ collection.products_count }} 
          {% if collection.products_count == 1 %}
            Product
          {% else %}
            Products
          {% endif %}
        {% endif %}
      </div>
      
      <div class="collection-sort">
        <label for="sort-by" class="form-label" style="margin-bottom: 0;">Sort by:</label>
        <select id="sort-by" class="form-select" style="width: auto; min-width: 200px;" onchange="sortCollection(this.value)">
          <option value="manual">Featured</option>
          <option value="best-selling">Best Selling</option>
          <option value="title-ascending">Alphabetically, A-Z</option>
          <option value="title-descending">Alphabetically, Z-A</option>
          <option value="price-ascending">Price, Low to High</option>
          <option value="price-descending">Price, High to Low</option>
          <option value="created-ascending">Date, Old to New</option>
          <option value="created-descending">Date, New to Old</option>
        </select>
      </div>
    </div>
    
    <!-- Product Grid -->
    {% if collection.products.size > 0 %}
      <div class="product-grid">
        {% for product in collection.products %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card-link">
              <div class="product-card-image-wrapper">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: '400x400' }}" 
                       alt="{{ product.featured_image.alt | escape }}"
                       class="product-card-image"
                       loading="lazy">
                {% else %}
                  <img src="{{ 'product-placeholder.png' | asset_url }}" 
                       alt="Product placeholder"
                       class="product-card-image"
                       loading="lazy">
                {% endif %}
                
                {% unless product.available %}
                  <div style="position: absolute; top: 1rem; right: 1rem; background: #DC2626; color: white; padding: 0.25rem 0.75rem; border-radius: 4px; font-size: 0.75rem; font-weight: 700;">
                    SOLD OUT
                  </div>
                {% endunless %}
                
                {% if product.compare_at_price > product.price %}
                  <div style="position: absolute; top: 1rem; left: 1rem; background: var(--gradient-gold); color: white; padding: 0.25rem 0.75rem; border-radius: 4px; font-size: 0.75rem; font-weight: 700;">
                    SALE
                  </div>
                {% endif %}
              </div>
              
              <div class="product-card-content">
                <h3 class="product-card-title">{{ product.title }}</h3>
                
                <div class="product-card-price">
                  {% if product.compare_at_price > product.price %}
                    <span style="text-decoration: line-through; opacity: 0.6; font-size: 1rem; margin-right: 0.5rem;">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                  {{ product.price | money }}
                </div>
                
                {% if product.description != blank %}
                  <div class="product-card-description">
                    {{ product.description | strip_html | truncate: 100 }}
                  </div>
                {% endif %}
                
                <div class="product-card-button">
                  <button class="btn btn-small btn-full-width">
                    {% if product.available %}
                      View Product
                    {% else %}
                      View Details
                    {% endif %}
                  </button>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
      
      <!-- Pagination -->
      {% if paginate.pages > 1 %}
        <div class="pagination" style="display: flex; justify-content: center; align-items: center; gap: 0.5rem; margin-top: 3rem; flex-wrap: wrap;">
          {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="btn btn-secondary btn-small">
              ‚Üê Previous
            </a>
          {% endif %}
          
          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}" class="btn btn-secondary btn-small">
                {{ part.title }}
              </a>
            {% else %}
              {% if part.title == paginate.current_page %}
                <span class="btn btn-small" style="pointer-events: none;">
                  {{ part.title }}
                </span>
              {% else %}
                <span style="padding: 0.625rem 1.25rem; color: var(--color-text-gray);">
                  {{ part.title }}
                </span>
              {% endif %}
            {% endif %}
          {% endfor %}
          
          {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="btn btn-secondary btn-small">
              Next ‚Üí
            </a>
          {% endif %}
        </div>
      {% endif %}
      
    {% else %}
      <!-- Empty State -->
      <div class="cart-empty">
        <div class="cart-empty-icon">üì¶</div>
        <p class="cart-empty-text">No products found in this collection.</p>
        <a href="/collections/all" class="btn">Browse All Products</a>
      </div>
    {% endif %}
  </div>
</section>

{% paginate collection.products by 24 %}
{% endpaginate %}

<script>
  // Sort collection
  function sortCollection(sortValue) {
    const url = new URL(window.location.href);
    url.searchParams.set('sort_by', sortValue);
    window.location.href = url.toString();
  }
  
  // Set current sort value on page load
  document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const sortBy = urlParams.get('sort_by');
    if (sortBy) {
      const sortSelect = document.getElementById('sort-by');
      if (sortSelect) {
        sortSelect.value = sortBy;
      }
    }
  });
</script>

{% schema %}
{
  "name": "Collection",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 12,
      "max": 48,
      "step": 12,
      "label": "Products per page",
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "label": "Enable filtering",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "label": "Enable sorting",
      "default": true
    },
    {
      "type": "select",
      "id": "grid_type",
      "label": "Grid type",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "list",
          "label": "List"
        }
      ],
      "default": "grid"
    }
  ]
}
{% endschema %}

