{% comment %}
  Plans Archive Section
  Displays all floor plans from Shopify
{% endcomment %}

{% render 'plan-modal-styles' %}

<section class="plans-archive-section">
  <div class="container">
    <div class="plans-archive-header">
      <h1 class="plans-archive-title">Pre-Made Floor Plans</h1>
      <p class="plans-archive-subtitle">
        Browse our collection of ready-to-build steel building plans. Download instantly and start your project today.
      </p>
    </div>
    
    <!-- Products Grid -->
    <div id="products-grid" class="product-grid">
      <div class="loading-message">
        <svg width="40" height="40" viewBox="0 0 40 40" style="margin: 0 auto 1rem; display: block;">
          <circle cx="20" cy="20" r="18" fill="none" stroke="#3A3A3A" stroke-width="4"/>
          <circle cx="20" cy="20" r="18" fill="none" stroke="#B8860B" stroke-width="4" stroke-dasharray="90, 150" stroke-linecap="round">
            <animateTransform attributeName="transform" type="rotate" from="0 20 20" to="360 20 20" dur="1s" repeatCount="indefinite"/>
          </circle>
        </svg>
        Loading floor plans...
      </div>
    </div>
  </div>
</section>

<!-- Load Shopify Products Script -->
<script src="{{ 'shopify-products.js' | asset_url }}" defer></script>

<style>
/* Plans Archive Section Styles */

.plans-archive-section {
  padding: 4rem 0;
  min-height: 60vh;
  background: #1C1C1C;
}

.plans-archive-header {
  text-align: center;
  margin-bottom: 3rem;
}

.plans-archive-title {
  font-size: 3rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 1rem;
}

.plans-archive-subtitle {
  color: #D1D5DB;
  font-size: 1.25rem;
  max-width: 700px;
  margin: 0 auto;
  line-height: 1.6;
}

/* IMPROVED PRODUCT GRID */
.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
  gap: 2rem;
  margin: 2rem 0;
  align-items: stretch;
}

/* CONSISTENT PRODUCT CARDS */
.product-card {
  background: #2A2A2A;
  border: 1px solid #3A3A3A;
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;
  min-height: 550px;
}

.product-card:hover {
  border-color: #B8860B;
  box-shadow: 0 8px 24px rgba(184, 134, 11, 0.3);
  transform: translateY(-4px);
}

/* FIXED IMAGE SIZING */
.product-image {
  width: 100%;
  height: 280px;
  object-fit: contain;
  object-position: center;
  background: #1C1C1C;
  flex-shrink: 0;
}

/* CONTENT AREA WITH FLEX */
.product-content {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  gap: 1rem;
}

/* CONSISTENT TITLE HEIGHT */
.product-title {
  font-size: 1.15rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.4;
  min-height: 3.2rem;
  max-height: 4.8rem;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

/* SPECS ROW */
.product-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  color: #D1D5DB;
  font-size: 0.9rem;
  min-height: 2rem;
}

.product-specs span {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  white-space: nowrap;
}

/* DESCRIPTION */
.product-description {
  color: #D1D5DB;
  font-size: 0.9rem;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  min-height: 4rem;
  flex-grow: 1;
}

/* PRICE AT BOTTOM */
.product-price {
  color: #B8860B;
  font-size: 1.5rem;
  font-weight: 700;
  margin-top: auto;
  padding-top: 0.5rem;
}

/* BUTTON CONTAINER */
.product-buttons {
  margin-top: 1rem;
}

.product-buttons .btn {
  width: 100%;
  text-align: center;
  justify-content: center;
  padding: 0.875rem 1.5rem;
  font-size: 1rem;
  font-weight: 600;
}

/* LOADING STATE */
.loading-message {
  text-align: center;
  color: #D1D5DB;
  padding: 4rem 2rem;
  grid-column: 1 / -1;
  font-size: 1.125rem;
}

/* ANIMATIONS */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeInUp 0.5s ease forwards;
  opacity: 0;
}

.product-card:nth-child(1) { animation-delay: 0.05s; }
.product-card:nth-child(2) { animation-delay: 0.1s; }
.product-card:nth-child(3) { animation-delay: 0.15s; }
.product-card:nth-child(4) { animation-delay: 0.2s; }
.product-card:nth-child(5) { animation-delay: 0.25s; }
.product-card:nth-child(6) { animation-delay: 0.3s; }

/* RESPONSIVE BREAKPOINTS */
@media (max-width: 1200px) {
  .product-grid {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
}

@media (max-width: 768px) {
  .plans-archive-section {
    padding: 3rem 0;
  }
  
  .plans-archive-title {
    font-size: 2rem;
  }
  
  .plans-archive-subtitle {
    font-size: 1.1rem;
  }
  
  .product-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .product-card {
    min-height: auto;
  }
  
  .product-image {
    height: 220px;
  }
  
  .product-title {
    font-size: 1.1rem;
    min-height: auto;
  }
}

@media (max-width: 480px) {
  .product-grid {
    gap: 1rem;
  }
  
  .product-content {
    padding: 1.25rem;
  }
  
  .product-image {
    height: 200px;
  }
}
</style>

