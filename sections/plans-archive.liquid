{% comment %}
  Plans Archive Section - Unified Card Styling
  Matches the featured-collection card design exactly
  Fetches products from Shopify collections
{% endcomment %}

<style>
/* Clean Product Grid Styles - Matches Home Page */

.plans-archive-section {
  padding: 4rem 0;
  background: #1C1C1C;
}

.plans-archive-header {
  text-align: center;
  margin-bottom: 3rem;
}

.plans-archive-title {
  font-size: 2.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 1rem;
}

.plans-archive-subtitle {
  color: #D1D5DB;
  font-size: 1.125rem;
  max-width: 600px;
  margin: 0 auto;
}

/* IMPROVED PRODUCT GRID */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
  margin: 2rem 0;
  align-items: stretch;
}

/* CONSISTENT PRODUCT CARDS */
.product-card {
  background: #2A2A2A;
  border: 1px solid #3A3A3A;
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* Only apply min-height on desktop */
@media (min-width: 769px) {
  .product-card {
    min-height: 550px;
  }
}

.product-card:hover {
  border-color: #B8860B;
  box-shadow: 0 8px 24px rgba(184, 134, 11, 0.3);
  transform: translateY(-4px);
}

/* FIXED IMAGE SIZING */
.product-image {
  width: 100%;
  height: 280px;
  object-fit: cover;
  object-position: center;
  flex-shrink: 0;
  overflow: hidden;
}

/* CONTENT AREA WITH FLEX */
.product-content {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  gap: 1rem;
}

/* CONSISTENT TITLE HEIGHT */
.product-title {
  font-size: 1.15rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.4;
  min-height: 3.2rem;
  max-height: 4.8rem;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

/* SPECS ROW */
.product-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  color: #D1D5DB;
  font-size: 0.9rem;
  min-height: 2rem;
}

.product-specs span {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  white-space: nowrap;
}

/* DESCRIPTION */
.product-description {
  color: #D1D5DB;
  font-size: 0.9rem;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  min-height: 4rem;
  flex-grow: 1;
}

/* PRICE AT BOTTOM */
.product-price {
  color: #B8860B;
  font-size: 1.5rem;
  font-weight: 700;
  margin-top: auto;
  padding-top: 0.5rem;
}

/* BUTTON CONTAINER */
.product-buttons {
  margin-top: 1rem;
}

.product-buttons .btn {
  width: 100%;
  text-align: center;
  justify-content: center;
  padding: 0.875rem 1.5rem;
  font-size: 1rem;
  font-weight: 600;
}

/* LOADING STATE */
.loading-message {
  text-align: center;
  color: #D1D5DB;
  padding: 4rem 2rem;
  grid-column: 1 / -1;
  font-size: 1.125rem;
}

/* ANIMATIONS */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeInUp 0.5s ease forwards;
  opacity: 0;
}

.product-card:nth-child(1) { animation-delay: 0.05s; }
.product-card:nth-child(2) { animation-delay: 0.1s; }
.product-card:nth-child(3) { animation-delay: 0.15s; }
.product-card:nth-child(4) { animation-delay: 0.2s; }
.product-card:nth-child(5) { animation-delay: 0.25s; }
.product-card:nth-child(6) { animation-delay: 0.3s; }

/* RESPONSIVE BREAKPOINTS */
@media (max-width: 1200px) {
  .product-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
}

/* MOBILE OPTIMIZED LAYOUT - MATCHES HOME PAGE */
@media (max-width: 768px) {
  .plans-archive-section {
    padding: 100px 0 1.5rem 0;
    margin-top: 0;
  }
  
  .plans-archive-header {
    padding: 0 1rem;
    margin-bottom: 1.5rem;
    padding-top: env(safe-area-inset-top, 0);
  }
  
  .plans-archive-title {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }
  
  .plans-archive-subtitle {
    font-size: 0.95rem;
  }
  
  /* FULL WIDTH CARD GRID - NO SIDE MARGINS */
  .product-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
    padding: 0;
    margin: 0;
    scroll-behavior: smooth;
  }
  
  /* MODERN FULL-WIDTH CARD */
  .product-card {
    min-height: auto;
    max-width: 100%;
    margin: 0;
    border-radius: 0;
    border-left: none;
    border-right: none;
  }
  
  /* LARGE FULL-WIDTH IMAGE */
  .product-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    object-position: center;
    padding: 0;
    overflow: hidden;
  }
  
  /* CONTENT AREA - GENEROUS PADDING */
  .product-content {
    padding: 1.5rem;
  }
  
  /* MOBILE TITLE */
  .product-title {
    font-size: 1.25rem;
    min-height: auto;
    -webkit-line-clamp: 2;
  }
  
  /* MOBILE SPECS */
  .product-specs {
    font-size: 0.875rem;
    gap: 0.75rem;
  }
  
  /* MOBILE DESCRIPTION */
  .product-description {
    font-size: 0.875rem;
    -webkit-line-clamp: 2;
    min-height: auto;
  }
  
  /* MOBILE PRICE */
  .product-price {
    font-size: 1.375rem;
  }
  
  /* MOBILE BUTTON */
  .product-buttons .btn {
    padding: 0.75rem 1.25rem;
    font-size: 0.95rem;
  }
}

/* EXTRA SMALL MOBILE */
@media (max-width: 480px) {
  .plans-archive-section {
    padding-top: 90px;
  }
  
  .product-image {
    height: 300px;
  }
  
  .product-title {
    font-size: 1.125rem;
  }
}
</style>

<section class="plans-archive-section">
  <div class="container">
    <div class="plans-archive-header">
      <h1 class="plans-archive-title">{{ section.settings.title }}</h1>
      {% if section.settings.subtitle %}
        <p class="plans-archive-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="product-grid" id="plans-grid">
      <div class="loading-message">Loading floor plans...</div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const grid = document.getElementById('plans-grid');
  const collectionHandle = '{{ section.settings.collection_handle }}' || 'floor-plans';

  async function loadPlans() {
    try {
      // Fetch products from Shopify collection
      const response = await fetch(`/collections/${collectionHandle}/products.json`);
      
      if (!response.ok) throw new Error('Failed to fetch products');
      
      const data = await response.json();
      const products = data.products;
      
      if (!products || products.length === 0) {
        grid.innerHTML = '<div class="loading-message">No products available in this collection.</div>';
        return;
      }
      
      grid.innerHTML = '';
      
      products.forEach((product, index) => {
        const card = document.createElement('div');
        card.className = 'product-card fade-in';
        card.style.animationDelay = `${index * 0.05}s`;
        card.style.cursor = 'pointer';
        
        // Click handler for entire card
        card.addEventListener('click', function(e) {
          if (e.target.tagName !== 'BUTTON' && !e.target.closest('button')) {
            window.location.href = `/products/${product.handle}`;
          }
        });
        
        // Get product details
        const imageUrl = product.images && product.images.length > 0 
          ? product.images[0].src 
          : 'https://via.placeholder.com/400x280?text=No+Image';
        
        const title = product.title || 'Untitled Product';
        
        // Extract description from HTML
        const tempDiv = document.createElement('div');
        tempDiv.innerHTML = product.body_html || '';
        const plainText = tempDiv.textContent || tempDiv.innerText || '';
        const description = plainText.length > 150 
          ? plainText.substring(0, 150) + '...' 
          : plainText || 'No description available';
        
        // Extract dimensions from title or tags
        let specs = '';
        const sizeMatch = product.title.match(/(\d+)\s*[xX√ó]\s*(\d+)/);
        if (sizeMatch) {
          specs = `<span>üìê ${sizeMatch[1]}' √ó ${sizeMatch[2]}'</span>`;
        }
        
        // Get price from first variant
        const variant = product.variants[0];
        const price = variant && variant.price 
          ? parseFloat(variant.price).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })
          : '0.00';
        
        card.innerHTML = `
          <img src="${imageUrl}" alt="${title}" class="product-image" loading="lazy">
          <div class="product-content">
            <h3 class="product-title">${title}</h3>
            ${specs ? `<div class="product-specs">${specs}</div>` : ''}
            <p class="product-description">${description}</p>
            <div class="product-price">$${price}</div>
            <div class="product-buttons">
              <button class="btn" onclick="window.location.href='/products/${product.handle}'">View Details</button>
            </div>
          </div>
        `;
        
        grid.appendChild(card);
      });
    } catch (error) {
      console.error('Error loading products:', error);
      grid.innerHTML = '<div class="loading-message" style="color: #DC2626;">Unable to load floor plans. Please try again later.</div>';
    }
  }

  loadPlans();
});
</script>

{% schema %}
{
  "name": "Plans Archive",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Browse Our Floor Plans"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Explore our complete collection of customizable steel building floor plans"
    },
    {
      "type": "text",
      "id": "collection_handle",
      "label": "Collection Handle",
      "default": "floor-plans",
      "info": "Enter the handle of the Shopify collection to display (e.g., 'floor-plans', 'all')"
    }
  ],
  "presets": [
    {
      "name": "Plans Archive",
      "category": "Custom"
    }
  ]
}
{% endschema %}
