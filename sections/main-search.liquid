{% comment %}
  Main Search Section
  Displays search results with product grid
{% endcomment %}

<style>
  .search-results-page {
    padding: 4rem 0;
    min-height: 60vh;
  }
  
  .search-results-header {
    margin-bottom: 3rem;
    text-align: center;
  }
  
  .search-results-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }
  
  .search-query {
    color: white;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }
  
  .search-query-term {
    color: var(--color-gold);
    font-weight: 600;
  }
  
  .search-results-count {
    color: var(--color-text-gray);
    font-size: 1rem;
  }
  
  .search-form-container {
    max-width: 600px;
    margin: 0 auto 3rem;
  }
  
  .search-form-wrapper {
    position: relative;
  }
  
  .search-form-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-gray);
  }
  
  .search-form-input {
    width: 100%;
    padding: 1rem 4rem 1rem 3rem;
    background: #2A2A2A;
    border: 2px solid var(--color-border);
    border-radius: 8px;
    color: white;
    font-size: 1rem;
    transition: all 0.2s ease;
  }
  
  .search-form-input:focus {
    outline: none;
    border-color: var(--color-gold);
    box-shadow: 0 0 0 4px rgba(184, 134, 11, 0.1);
  }
  
  .search-form-button {
    position: absolute;
    right: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    background: var(--gradient-gold);
    border: none;
    color: white;
    padding: 0.625rem 1.25rem;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 600;
    transition: opacity 0.2s;
  }
  
  .search-form-button:hover {
    opacity: 0.9;
  }
  
  .search-no-results {
    text-align: center;
    padding: 4rem 2rem;
  }
  
  .search-no-results-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
  }
  
  .search-no-results-title {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1rem;
  }
  
  .search-no-results-text {
    color: var(--color-text-gray);
    font-size: 1.125rem;
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .search-suggestions {
    margin-top: 2rem;
  }
  
  .search-suggestions-title {
    color: white;
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .search-suggestions-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .search-suggestions-item {
    margin-bottom: 0.5rem;
  }
  
  .search-suggestions-link {
    color: var(--color-gold);
    text-decoration: none;
    transition: opacity 0.2s;
  }
  
  .search-suggestions-link:hover {
    opacity: 0.8;
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .search-results-title {
      font-size: 2rem;
    }
    
    .search-query {
      font-size: 1.125rem;
    }
    
    .search-form-input {
      padding-right: 1rem;
      margin-bottom: 1rem;
    }
    
    .search-form-button {
      position: static;
      transform: none;
      width: 100%;
    }
    
    .search-form-wrapper {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

<section class="search-results-page">
  <div class="container">
    <!-- Search Header -->
    <div class="search-results-header">
      <h1 class="search-results-title">Search Results</h1>
      
      {% if search.performed %}
        <p class="search-query">
          Searching for: <span class="search-query-term">"{{ search.terms | escape }}"</span>
        </p>
        
        <p class="search-results-count">
          {% if search.results_count > 0 %}
            Found {{ search.results_count }} 
            {% if search.results_count == 1 %}
              result
            {% else %}
              results
            {% endif %}
          {% else %}
            No results found
          {% endif %}
        </p>
      {% endif %}
    </div>
    
    <!-- Search Form -->
    <div class="search-form-container">
      <form action="/search" method="get" class="search-form-wrapper">
        <div class="search-form-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </div>
        <input 
          type="search" 
          name="q" 
          class="search-form-input" 
          placeholder="Search for building plans..."
          value="{{ search.terms | escape }}"
          autocomplete="off">
        <button type="submit" class="search-form-button">Search</button>
      </form>
    </div>
    
    <!-- Search Results -->
    {% if search.performed %}
      {% if search.results_count > 0 %}
        <div class="product-grid">
          {% for item in search.results %}
            {% if item.object_type == 'product' %}
              {% assign product = item %}
              <div class="product-card fade-in">
                <a href="{{ product.url }}" class="product-card-link">
                  <div class="product-card-image-wrapper">
                    {% if product.featured_image %}
                      <img src="{{ product.featured_image | img_url: '400x400' }}" 
                           alt="{{ product.featured_image.alt | escape }}"
                           class="product-card-image"
                           loading="lazy">
                    {% else %}
                      <img src="{{ 'product-placeholder.png' | asset_url }}" 
                           alt="Product placeholder"
                           class="product-card-image"
                           loading="lazy">
                    {% endif %}
                    
                    {% unless product.available %}
                      <div style="position: absolute; top: 1rem; right: 1rem; background: #DC2626; color: white; padding: 0.25rem 0.75rem; border-radius: 4px; font-size: 0.75rem; font-weight: 700;">
                        SOLD OUT
                      </div>
                    {% endunless %}
                    
                    {% if product.compare_at_price > product.price %}
                      <div style="position: absolute; top: 1rem; left: 1rem; background: var(--gradient-gold); color: white; padding: 0.25rem 0.75rem; border-radius: 4px; font-size: 0.75rem; font-weight: 700;">
                        SALE
                      </div>
                    {% endif %}
                  </div>
                  
                  <div class="product-card-content">
                    <h3 class="product-card-title">{{ product.title }}</h3>
                    
                    <div class="product-card-price">
                      {% if product.compare_at_price > product.price %}
                        <span style="text-decoration: line-through; opacity: 0.6; font-size: 1rem; margin-right: 0.5rem;">
                          {{ product.compare_at_price | money }}
                        </span>
                      {% endif %}
                      {{ product.price | money }}
                    </div>
                    
                    {% if product.description != blank %}
                      <div class="product-card-description">
                        {{ product.description | strip_html | truncate: 100 }}
                      </div>
                    {% endif %}
                    
                    <div class="product-card-button">
                      <button class="btn btn-small btn-full-width">
                        {% if product.available %}
                          View Product
                        {% else %}
                          View Details
                        {% endif %}
                      </button>
                    </div>
                  </div>
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Pagination -->
        {% if paginate.pages > 1 %}
          <div class="pagination" style="display: flex; justify-content: center; align-items: center; gap: 0.5rem; margin-top: 3rem; flex-wrap: wrap;">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="btn btn-secondary btn-small">
                ‚Üê Previous
              </a>
            {% endif %}
            
            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="btn btn-secondary btn-small">
                  {{ part.title }}
                </a>
              {% else %}
                {% if part.title == paginate.current_page %}
                  <span class="btn btn-small" style="pointer-events: none;">
                    {{ part.title }}
                  </span>
                {% else %}
                  <span style="padding: 0.625rem 1.25rem; color: var(--color-text-gray);">
                    {{ part.title }}
                  </span>
                {% endif %}
              {% endif %}
            {% endfor %}
            
            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="btn btn-secondary btn-small">
                Next ‚Üí
              </a>
            {% endif %}
          </div>
        {% endif %}
        
      {% else %}
        <!-- No Results -->
        <div class="search-no-results">
          <div class="search-no-results-icon">üîç</div>
          <h2 class="search-no-results-title">No Results Found</h2>
          <p class="search-no-results-text">
            We couldn't find any products matching "{{ search.terms | escape }}". 
            Try adjusting your search or browse our popular categories below.
          </p>
          
          <a href="/collections/all" class="btn btn-large">
            Browse All Products
          </a>
          
          <div class="search-suggestions">
            <h3 class="search-suggestions-title">Popular Searches:</h3>
            <ul class="search-suggestions-list">
              <li class="search-suggestions-item">
                <a href="/search?q=barndominium" class="search-suggestions-link">Barndominium Plans</a>
              </li>
              <li class="search-suggestions-item">
                <a href="/search?q=30x40" class="search-suggestions-link">30x40 Buildings</a>
              </li>
              <li class="search-suggestions-item">
                <a href="/search?q=40x60" class="search-suggestions-link">40x60 Buildings</a>
              </li>
              <li class="search-suggestions-item">
                <a href="/search?q=2+bedroom" class="search-suggestions-link">2 Bedroom Plans</a>
              </li>
              <li class="search-suggestions-item">
                <a href="/search?q=garage" class="search-suggestions-link">Garage Plans</a>
              </li>
            </ul>
          </div>
        </div>
      {% endif %}
    {% else %}
      <!-- Initial State (no search performed) -->
      <div class="search-no-results">
        <div class="search-no-results-icon">üîç</div>
        <h2 class="search-no-results-title">Start Your Search</h2>
        <p class="search-no-results-text">
          Enter a search term above to find building plans, materials, and more.
        </p>
        
        <div class="search-suggestions">
          <h3 class="search-suggestions-title">Popular Searches:</h3>
          <ul class="search-suggestions-list">
            <li class="search-suggestions-item">
              <a href="/search?q=barndominium" class="search-suggestions-link">Barndominium Plans</a>
            </li>
            <li class="search-suggestions-item">
              <a href="/search?q=30x40" class="search-suggestions-link">30x40 Buildings</a>
            </li>
            <li class="search-suggestions-item">
              <a href="/search?q=40x60" class="search-suggestions-link">40x60 Buildings</a>
            </li>
            <li class="search-suggestions-item">
              <a href="/search?q=2+bedroom" class="search-suggestions-link">2 Bedroom Plans</a>
            </li>
            <li class="search-suggestions-item">
              <a href="/search?q=garage" class="search-suggestions-link">Garage Plans</a>
            </li>
          </ul>
        </div>
      </div>
    {% endif %}
  </div>
</section>

{% paginate search.results by 24 %}
{% endpaginate %}

{% schema %}
{
  "name": "Search",
  "settings": [
    {
      "type": "range",
      "id": "results_per_page",
      "min": 12,
      "max": 48,
      "step": 12,
      "label": "Results per page",
      "default": 24
    },
    {
      "type": "checkbox",
      "id": "show_product_vendor",
      "label": "Show product vendor",
      "default": false
    }
  ]
}
{% endschema %}

