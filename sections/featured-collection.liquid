{% comment %}
  Featured Collection Section - Shopify Integration
  Displays floor plans from Shopify collection
{% endcomment %}

<style>
/* Clean Product Grid Styles */

.products-section {
  padding: 4rem 0;
  background: #1C1C1C;
}

.products-header {
  text-align: center;
  margin-bottom: 3rem;
}

.products-title {
  font-size: 2.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 1rem;
}

.products-subtitle {
  color: #D1D5DB;
  font-size: 1.125rem;
  max-width: 600px;
  margin: 0 auto;
}

/* IMPROVED PRODUCT GRID */
.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
  gap: 2rem;
  margin: 2rem 0;
  align-items: stretch;
}

/* CONSISTENT PRODUCT CARDS */
.product-card {
  background: #2A2A2A;
  border: 1px solid #3A3A3A;
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;
  min-height: 550px;
}

.product-card:hover {
  border-color: #B8860B;
  box-shadow: 0 8px 24px rgba(184, 134, 11, 0.3);
  transform: translateY(-4px);
}

/* FIXED IMAGE SIZING */
.product-image {
  width: 100%;
  height: 280px;
  object-fit: contain;
  object-position: center;
  background: #1C1C1C;
  flex-shrink: 0;
}

/* CONTENT AREA WITH FLEX */
.product-content {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  gap: 1rem;
}

/* CONSISTENT TITLE HEIGHT */
.product-title {
  font-size: 1.15rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.4;
  min-height: 3.2rem;
  max-height: 4.8rem;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

/* SPECS ROW */
.product-specs {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  color: #D1D5DB;
  font-size: 0.9rem;
  min-height: 2rem;
}

.product-specs span {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  white-space: nowrap;
}

/* DESCRIPTION */
.product-description {
  color: #D1D5DB;
  font-size: 0.9rem;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  min-height: 4rem;
  flex-grow: 1;
}

/* PRICE AT BOTTOM */
.product-price {
  color: #B8860B;
  font-size: 1.5rem;
  font-weight: 700;
  margin-top: auto;
  padding-top: 0.5rem;
}

/* BUTTON CONTAINER */
.product-buttons {
  margin-top: 1rem;
}

.product-buttons .btn {
  width: 100%;
  text-align: center;
  justify-content: center;
  padding: 0.875rem 1.5rem;
  font-size: 1rem;
  font-weight: 600;
}

/* LOADING STATE */
.loading-message {
  text-align: center;
  color: #D1D5DB;
  padding: 4rem 2rem;
  grid-column: 1 / -1;
  font-size: 1.125rem;
}

/* ANIMATIONS */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeInUp 0.5s ease forwards;
  opacity: 0;
}

.product-card:nth-child(1) { animation-delay: 0.05s; }
.product-card:nth-child(2) { animation-delay: 0.1s; }
.product-card:nth-child(3) { animation-delay: 0.15s; }
.product-card:nth-child(4) { animation-delay: 0.2s; }
.product-card:nth-child(5) { animation-delay: 0.25s; }
.product-card:nth-child(6) { animation-delay: 0.3s; }

/* RESPONSIVE BREAKPOINTS */
@media (max-width: 1200px) {
  .product-grid {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
}

@media (max-width: 768px) {
  .products-section {
    padding: 3rem 0;
  }
  
  .products-title {
    font-size: 2rem;
  }
  
  .products-subtitle {
    font-size: 1rem;
  }
  
  .product-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .product-card {
    min-height: auto;
  }
  
  .product-image {
    height: 220px;
  }
  
  .product-title {
    font-size: 1.1rem;
    min-height: auto;
  }
}

@media (max-width: 480px) {
  .product-grid {
    gap: 1rem;
  }
  
  .product-content {
    padding: 1.25rem;
  }
  
  .product-image {
    height: 200px;
  }
}
  
  /* Plan Detail Modal */
  .plan-detail-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .plan-detail-modal.active {
    opacity: 1;
  }
  
  .plan-modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(4px);
  }
  
  .plan-modal-content {
    position: relative;
    width: 90%;
    max-width: 1200px;
    max-height: 90vh;
    margin: 5vh auto;
    background: #2A2A2A;
    border-radius: 16px;
    overflow-y: auto;
    animation: slideUp 0.3s ease;
  }
  
  @keyframes slideUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  .plan-modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: white;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .plan-modal-close:hover {
    background: #B8860B;
    transform: rotate(90deg);
  }
  
  .plan-modal-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    padding: 3rem;
  }
  
  .plan-modal-image-section {
    position: relative;
  }
  
  .plan-modal-image-wrapper {
    position: relative;
    background: #f5f5f5;
    border-radius: 12px;
    overflow: hidden;
    cursor: zoom-in;
    aspect-ratio: 4/3;
  }
  
  .plan-modal-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .plan-modal-image-wrapper:hover .plan-modal-image {
    transform: scale(1.05);
  }
  
  .zoom-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: white;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  .plan-modal-image-wrapper:hover .zoom-overlay {
    opacity: 1;
  }
  
  .zoom-overlay span {
    font-size: 1rem;
    font-weight: 600;
  }
  
  .plan-modal-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .plan-modal-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
    line-height: 1.2;
  }
  
  .plan-modal-specs {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .spec-badge {
    flex: 1;
    min-width: 140px;
    background: #1C1C1C;
    padding: 1rem;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    border: 1px solid #3A3A3A;
  }
  
  .spec-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }
  
  .spec-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #B8860B;
    line-height: 1;
  }
  
  .spec-label {
    font-size: 0.85rem;
    color: #D1D5DB;
    margin-top: 0.25rem;
  }
  
  .plan-modal-description {
    color: #D1D5DB;
    line-height: 1.7;
    font-size: 1.05rem;
  }
  
  .plan-modal-description p {
    margin: 0;
  }
  
  .plan-modal-features h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.75rem 0;
  }
  
  .plan-modal-features ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
    margin: 0;
    padding: 0;
  }
  
  .plan-modal-features li {
    color: #D1D5DB;
    padding: 0.5rem;
    background: #1C1C1C;
    border-radius: 4px;
    font-size: 0.9rem;
    border: 1px solid #3A3A3A;
  }
  
  .plan-modal-features li:before {
    content: "âœ“ ";
    color: #B8860B;
    font-weight: bold;
    margin-right: 0.5rem;
  }
  
  .plan-modal-pricing {
    background: linear-gradient(135deg, rgba(184, 134, 11, 0.1) 0%, rgba(255, 215, 0, 0.05) 100%);
    padding: 1.25rem;
    border-radius: 8px;
    border: 1px solid rgba(184, 134, 11, 0.3);
  }
  
  .modal-price {
    font-size: 1.75rem;
    font-weight: 700;
    color: #B8860B;
    margin: 0 0 0.25rem 0;
  }
  
  .modal-price-note {
    color: #D1D5DB;
    font-size: 0.85rem;
    margin: 0;
  }
  
  .plan-modal-actions {
    display: flex;
    gap: 1rem;
  }
  
  .plan-modal-actions .btn {
    flex: 1;
    padding: 1rem 2rem;
    text-align: center;
    justify-content: center;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    font-size: 1rem;
  }
  
  .plan-modal-actions .btn-secondary {
    background: #3A3A3A;
    border: 1px solid #4A4A4A;
  }
  
  .plan-modal-actions .btn-secondary:hover {
    background: #4A4A4A;
    opacity: 1;
  }
  
  /* Image Zoom Modal */
  .image-zoom-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10000;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .image-zoom-modal.active {
    opacity: 1;
  }
  
  .zoom-modal-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.95);
    cursor: pointer;
  }
  
  .zoom-modal-content {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  
  .zoom-close {
    position: absolute;
    top: 2rem;
    right: 2rem;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 10001;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .zoom-close:hover {
    background: rgba(184, 134, 11, 0.8);
    transform: rotate(90deg);
  }
  
  .zoom-image {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    cursor: grab;
    transition: transform 0.1s ease-out;
    touch-action: none;
    user-select: none;
    -webkit-user-select: none;
  }
  
  .zoom-image:active {
    cursor: grabbing;
  }
  
  .zoom-hint-text {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    background: rgba(0, 0, 0, 0.7);
    padding: 0.75rem 1.5rem;
    border-radius: 20px;
    font-size: 0.9rem;
    backdrop-filter: blur(10px);
    pointer-events: none;
  }
  
  .mobile-hint {
    display: none;
  }
  
  /* Modal Mobile Responsive */
  @media (max-width: 1024px) {
    .plan-modal-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 2rem;
    }
    
    .plan-modal-title {
      font-size: 2rem;
    }
    
    .plan-modal-specs {
      flex-direction: column;
    }
    
    .spec-badge {
      min-width: auto;
    }
    
    .plan-modal-features ul {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 768px) {
    .plan-modal-content {
      width: 95%;
      margin: 2vh auto;
      max-height: 96vh;
    }
    
    .plan-modal-grid {
      padding: 1.5rem;
      gap: 1.25rem;
    }
    
    .plan-modal-close {
      top: 0.5rem;
      right: 0.5rem;
      width: 40px;
      height: 40px;
    }
    
    .plan-modal-title {
      font-size: 1.75rem;
    }
    
    .spec-value {
      font-size: 1.25rem;
    }
    
    .plan-modal-actions {
      flex-direction: column;
    }
    
    .plan-modal-actions .btn {
      width: 100%;
    }
    
    .zoom-modal-content {
      padding: 1rem;
    }
    
    .zoom-image {
      max-width: 95%;
      max-height: 95%;
    }
    
    .zoom-close {
      top: 1rem;
      right: 1rem;
      width: 40px;
      height: 40px;
    }
    
    .zoom-hint-text {
      bottom: 1rem;
      font-size: 0.8rem;
      padding: 0.5rem 1rem;
    }
    
    .desktop-hint {
      display: none;
    }
    
    .mobile-hint {
      display: inline;
    }
  }
  
  /* Prevent body scroll when modal is open */
  body:has(.plan-detail-modal),
  body:has(.image-zoom-modal) {
    overflow: hidden;
  }
</style>

<section class="products-section">
  <div class="container">
    <div class="products-header">
      {% if section.settings.title != blank %}
        <h2 class="products-title">{{ section.settings.title }}</h2>
      {% else %}
        <h2 class="products-title">Steel Building Floor Plans</h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p class="products-subtitle">{{ section.settings.description }}</p>
      {% else %}
        <p class="products-subtitle">
          Explore our premium steel building floor plans, designed for durability and customization.
        </p>
      {% endif %}
    </div>
    
    <!-- Products Grid -->
    <div id="products-grid" class="product-grid">
      <div class="loading-message">
        <svg width="40" height="40" viewBox="0 0 40 40" style="margin: 0 auto 1rem; display: block;">
          <circle cx="20" cy="20" r="18" fill="none" stroke="#3A3A3A" stroke-width="4"/>
          <circle cx="20" cy="20" r="18" fill="none" stroke="#B8860B" stroke-width="4" stroke-dasharray="90, 150" stroke-linecap="round">
            <animateTransform attributeName="transform" type="rotate" from="0 20 20" to="360 20 20" dur="1s" repeatCount="indefinite"/>
          </circle>
        </svg>
        Loading floor plans...
      </div>
      </div>
  </div>
</section>

<!-- Load Shopify Products Script -->
<script src="{{ 'shopify-products.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Steel Building Floor Plans"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our premium steel building floor plans, designed for durability and customization."
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}
