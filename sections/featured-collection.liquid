{% comment %}
  Featured Collection Section - Supabase Integration
  Displays floor plans fetched from Supabase database
{% endcomment %}

<style>
  .supabase-section {
    padding: 4rem 0;
  }
  
  .supabase-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .supabase-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }
  
  .supabase-subtitle {
    color: var(--color-text-gray);
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }
  
  .supabase-product-card {
    background: #2A2A2A;
    border: 1px solid #3A3A3A;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  
  .supabase-product-card:hover {
    border-color: #B8860B;
    box-shadow: 0 8px 24px rgba(184, 134, 11, 0.3);
    transform: translateY(-4px);
  }
  
  .supabase-product-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    background: #f5f5f5;
  }
  
  .supabase-product-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .supabase-product-title {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  
  .supabase-product-specs {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    color: #D1D5DB;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }
  
  .supabase-product-specs span {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  .supabase-product-description {
    color: #D1D5DB;
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .supabase-product-features {
    list-style: none;
    margin-bottom: 1.5rem;
    padding: 0;
  }
  
  .supabase-product-features li {
    color: #D1D5DB;
    padding: 0.35rem 0;
    font-size: 0.9rem;
    line-height: 1.4;
  }
  
  .supabase-product-features li:before {
    content: "âœ“ ";
    color: #B8860B;
    font-weight: bold;
    margin-right: 0.5rem;
  }
  
  .supabase-product-price {
    color: #B8860B;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
    margin-top: auto;
  }
  
  .supabase-product-buttons {
    display: flex;
    gap: 0.5rem;
  }
  
  .supabase-product-buttons .btn {
    flex: 1;
    text-align: center;
    justify-content: center;
  }
  
  .loading-message {
    text-align: center;
    color: #D1D5DB;
    padding: 4rem 2rem;
    grid-column: 1 / -1;
    font-size: 1.125rem;
  }
  
  /* Fade in animation for cards */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .fade-in {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }
  
  .supabase-product-card:nth-child(1) { animation-delay: 0.1s; }
  .supabase-product-card:nth-child(2) { animation-delay: 0.2s; }
  .supabase-product-card:nth-child(3) { animation-delay: 0.3s; }
  .supabase-product-card:nth-child(4) { animation-delay: 0.4s; }
  .supabase-product-card:nth-child(5) { animation-delay: 0.5s; }
  .supabase-product-card:nth-child(6) { animation-delay: 0.6s; }
  
  @media (max-width: 1024px) {
    .product-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .supabase-section {
      padding: 3rem 0;
    }
    
    .supabase-title {
      font-size: 2rem;
    }
    
    .supabase-subtitle {
      font-size: 1rem;
    }
    
    .product-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .supabase-product-image {
      height: 250px;
    }
    
    .supabase-product-title {
      font-size: 1.25rem;
    }
    
    .supabase-product-buttons {
      flex-direction: column;
    }
  }
</style>

<section class="supabase-section">
  <div class="container">
    <div class="supabase-header">
      {% if section.settings.title != blank %}
        <h2 class="supabase-title">{{ section.settings.title }}</h2>
      {% else %}
        <h2 class="supabase-title">Steel Building Floor Plans</h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p class="supabase-subtitle">{{ section.settings.description }}</p>
      {% else %}
        <p class="supabase-subtitle">
          Explore our premium steel building floor plans, designed for durability and customization.
        </p>
      {% endif %}
    </div>
    
    <!-- Supabase Products Grid -->
    <div id="supabase-products-grid" class="product-grid">
      <div class="loading-message">
        <svg width="40" height="40" viewBox="0 0 40 40" style="margin: 0 auto 1rem; display: block;">
          <circle cx="20" cy="20" r="18" fill="none" stroke="#3A3A3A" stroke-width="4"/>
          <circle cx="20" cy="20" r="18" fill="none" stroke="#B8860B" stroke-width="4" stroke-dasharray="90, 150" stroke-linecap="round">
            <animateTransform attributeName="transform" type="rotate" from="0 20 20" to="360 20 20" dur="1s" repeatCount="indefinite"/>
          </circle>
        </svg>
        Loading floor plans...
      </div>
    </div>
  </div>
</section>

<!-- Load Supabase Products Script -->
<script src="{{ 'supabase-products.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Steel Building Floor Plans"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our premium steel building floor plans, designed for durability and customization."
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Collection"
    }
  ]
}
{% endschema %}
