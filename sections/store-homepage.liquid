}

.carousel-card-price {
  color: #B8860B;
  font-size: 1.5rem;
  font-weight: 700;
}

.carousel-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400px;
  width: 100%;
}

/* Carousel Mobile Responsive */
@media (max-width: 768px) {
  .product-carousel-section {
    padding: 3rem 0;
  }
  
  .carousel-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    padding: 0 1rem;
  }
  
  .carousel-title {
    font-size: 1.75rem;
  }
  
