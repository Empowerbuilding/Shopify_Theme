{% comment %}
  Store Homepage Section
  Features hero section with CTAs and features grid
{% endcomment %}

<div class="store-homepage">
  <!-- Hero Section -->
  <div class="hero-section">
    <div class="hero-image-wrapper">
      <video 
        class="hero-video"
        autoplay 
        muted 
        loop 
        playsinline
        preload="auto"
      >
        <source src="https://hbfjdfxephlczkfgpceg.supabase.co/storage/v1/object/public/website/barnhaus/Untitled%20video%20-%20Made%20with%20Clipchamp%20(18).mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <div class="hero-overlay"></div>
    </div>
    
    <div class="hero-content">
      <p class="hero-tagline">Be Different</p>
    </div>
  </div>

  <!-- Horizontal Product Carousel -->
  <div class="product-carousel-section">
    <div class="page-width">
      <div class="carousel-header">
        <h2 class="carousel-title">Featured Floor Plans</h2>
        <a href="/pages/plans" class="view-all-link">
          View All Plans
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    </div>
    
    <div class="carousel-container">
      <div class="carousel-track" id="carousel-track">
        <!-- Products will be loaded here dynamically -->
        <div class="carousel-loading">
          <svg width="40" height="40" viewBox="0 0 40 40">
            <circle cx="20" cy="20" r="18" fill="none" stroke="#3A3A3A" stroke-width="4"/>
            <circle cx="20" cy="20" r="18" fill="none" stroke="#B8860B" stroke-width="4" stroke-dasharray="90, 150" stroke-linecap="round">
              <animateTransform attributeName="transform" type="rotate" from="0 20 20" to="360 20 20" dur="1s" repeatCount="indefinite"/>
            </circle>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Store Homepage Styles */
.store-homepage {
  background: #1C1C1C;
}

/* Hero Section */
.hero-section {
  position: relative;
  height: 60vh;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-top: 0;
  padding-top: 0;
}

.hero-image-wrapper {
  position: absolute;
  inset: 0;
  background: #1C1C1C;
}

.hero-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  background: #1C1C1C;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom, rgba(28, 28, 28, 0.3), rgba(28, 28, 28, 0.4));
}

.hero-content {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  padding: 2rem;
}

.hero-tagline {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1C1C1C;
  margin: 0;
  letter-spacing: 1px;
  text-shadow: 
    0 0 20px rgba(255, 255, 255, 0.9),
    0 0 40px rgba(255, 255, 255, 0.7),
    0 0 60px rgba(255, 255, 255, 0.5),
    0 0 80px rgba(255, 255, 255, 0.3),
    0 0 100px rgba(255, 255, 255, 0.2);
  filter: drop-shadow(0 0 30px rgba(255, 255, 255, 0.8))
          drop-shadow(0 0 50px rgba(255, 255, 255, 0.5));
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .hero-section {
    height: 50vh;
    min-height: 400px;
    margin-top: 0;
    padding-top: 0;
  }
  
  .hero-content {
    padding: 1.5rem;
  }
  
  .hero-tagline {
    font-size: 1.75rem;
    text-shadow: 
      0 0 15px rgba(255, 255, 255, 0.9),
      0 0 30px rgba(255, 255, 255, 0.7),
      0 0 45px rgba(255, 255, 255, 0.5),
      0 0 60px rgba(255, 255, 255, 0.3);
    filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.8))
            drop-shadow(0 0 40px rgba(255, 255, 255, 0.5));
  }
  
  /* Ensure video starts at very top */
  .hero-image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
}

/* Horizontal Product Carousel */
.product-carousel-section {
  padding: 4rem 0;
  background: #1C1C1C;
  overflow: hidden;
}

.carousel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding: 0 1.5rem;
}

.carousel-title {
  font-size: 2.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.view-all-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #B8860B;
  font-weight: 600;
  font-size: 1.1rem;
  text-decoration: none;
  transition: all 0.3s ease;
}

.view-all-link:hover {
  color: #FFD700;
  gap: 0.75rem;
}

.view-all-link svg {
  transition: transform 0.3s ease;
}

.view-all-link:hover svg {
  transform: translateX(4px);
}

.carousel-container {
  position: relative;
  padding: 0 1.5rem;
}

.carousel-track {
  display: flex;
  gap: 1.5rem;
  overflow-x: auto;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: thin;
  scrollbar-color: #B8860B #2A2A2A;
  padding-bottom: 1rem;
}

.carousel-track::-webkit-scrollbar {
  height: 8px;
}

.carousel-track::-webkit-scrollbar-track {
  background: #2A2A2A;
  border-radius: 4px;
}

.carousel-track::-webkit-scrollbar-thumb {
  background: #B8860B;
  border-radius: 4px;
}

.carousel-track::-webkit-scrollbar-thumb:hover {
  background: #FFD700;
}

.carousel-card {
  flex: 0 0 320px;
  background: #2A2A2A;
  border: 1px solid #3A3A3A;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
  text-decoration: none;
  display: flex;
  flex-direction: column;
}

.carousel-card:hover {
  border-color: #B8860B;
  box-shadow: 0 8px 25px rgba(184, 134, 11, 0.3);
  transform: translateY(-5px);
}

.carousel-card-image {
  width: 100%;
  height: 320px;
  object-fit: contain;
  background: #1C1C1C;
}

.carousel-card-content {
  padding: 1.25rem;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.carousel-card-title {
  font-size: 1.1rem;
  font-weight: 700;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.carousel-card-specs {
  display: none;
}

.carousel-card-price {
  color: #B8860B;
  font-size: 1.5rem;
  font-weight: 700;
}

.carousel-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400px;
  width: 100%;
}

/* Carousel Mobile Responsive */
@media (max-width: 768px) {
  .product-carousel-section {
    padding: 3rem 0;
  }
  
  .carousel-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    padding: 0 1rem;
  }
  
  .carousel-title {
    font-size: 1.75rem;
  }
  
  .carousel-container {
    padding: 0 1rem;
  }
  
  .carousel-card {
    flex: 0 0 280px;
  }
  
  .carousel-card-image {
    height: 280px;
  }
  
  .carousel-card-content {
    padding: 1rem;
  }
  
  .carousel-card-title {
    font-size: 1rem;
  }
  
  .carousel-card-price {
    font-size: 1.35rem;
  }
}
</style>

<script>
// Load products into carousel
document.addEventListener('DOMContentLoaded', function() {
  const carouselTrack = document.getElementById('carousel-track');
  
  // Fetch products from Shopify
  fetch('/collections/all/products.json?limit=8')
    .then(response => response.json())
    .then(data => {
      if (data.products && data.products.length > 0) {
        carouselTrack.innerHTML = '';
        
        data.products.forEach(product => {
          const card = document.createElement('a');
          card.href = `/products/${product.handle}`;
          card.className = 'carousel-card';
          
          card.innerHTML = `
            <img src="${product.images[0]?.src || ''}" 
                 alt="${product.title}" 
                 class="carousel-card-image">
            <div class="carousel-card-content">
              <h3 class="carousel-card-title">${product.title}</h3>
              <div class="carousel-card-price">${formatMoney(product.variants[0].price)}</div>
            </div>
          `;
          
          carouselTrack.appendChild(card);
        });
      }
    })
    .catch(error => {
      console.error('Error loading products:', error);
      carouselTrack.innerHTML = '<p style="color: #D1D5DB; text-align: center; width: 100%;">Unable to load products</p>';
    });
});

// Extract specs from product title or tags
function extractSpecs(product) {
  const specs = [];
  const title = product.title.toLowerCase();
  
  // Try to extract dimensions from title
  const sizeMatch = title.match(/(\d+)\s*x\s*(\d+)/);
  if (sizeMatch) {
    specs.push(`<span>üìê ${sizeMatch[1]}' x ${sizeMatch[2]}'</span>`);
  }
  
  // Try to extract bedrooms
  const bedMatch = title.match(/(\d+)\s*bed/i);
  if (bedMatch) {
    specs.push(`<span>üõèÔ∏è ${bedMatch[1]} Bed</span>`);
  }
  
  // Try to extract bathrooms
  const bathMatch = title.match(/(\d+(?:\.\d+)?)\s*bath/i);
  if (bathMatch) {
    specs.push(`<span>üöø ${bathMatch[1]} Bath</span>`);
  }
  
  return specs.join('');
}

// Format money
function formatMoney(cents) {
  return '$' + (cents / 100).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
}
</script>

