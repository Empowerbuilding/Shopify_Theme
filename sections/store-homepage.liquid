    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
  
  .features-section {
    padding: 3rem 0;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .features-title {
    font-size: 2rem;
  }
  
  .feature-card {
    padding: 2rem;
  }
  
  .cta-section {
