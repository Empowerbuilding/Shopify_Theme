<style>
/* Store Homepage Styles */
.store-homepage {
  background: #1C1C1C;
}

/* Hero Section */
.hero-section {
  position: relative;
  height: 60vh;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-top: 0;
  padding-top: 0;
}

.hero-image-wrapper {
  position: absolute;
  inset: 0;
  background: #1C1C1C;
}

.hero-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  background: #1C1C1C;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom, rgba(28, 28, 28, 0.3), rgba(28, 28, 28, 0.4));
}

.hero-content {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  padding: 2rem;
}

.hero-tagline {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1C1C1C;
  margin: 0;
  letter-spacing: 1px;
  text-shadow: 
    0 0 20px rgba(255, 255, 255, 0.9),
    0 0 40px rgba(255, 255, 255, 0.7),
    0 0 60px rgba(255, 255, 255, 0.5),
    0 0 80px rgba(255, 255, 255, 0.3),
    0 0 100px rgba(255, 255, 255, 0.2);
  filter: drop-shadow(0 0 30px rgba(255, 255, 255, 0.8))
          drop-shadow(0 0 50px rgba(255, 255, 255, 0.5));
}

/* Features Section */
.features-section {
  padding: 5rem 0;
  background: #1C1C1C;
}

.features-title {
  text-align: center;
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 3rem;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.feature-card {
  background: #2A2A2A;
  border: 2px solid #3A3A3A;
  border-radius: 12px;
  padding: 2.5rem;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
}

.feature-card:hover {
  border-color: #B8860B;
  transform: translateY(-8px);
  box-shadow: 0 8px 30px rgba(184, 134, 11, 0.3);
}

.feature-card-highlight {
  border-color: #B8860B;
  background: linear-gradient(135deg, rgba(184, 134, 11, 0.1), rgba(150, 111, 9, 0.05));
}

.feature-badge {
  position: absolute;
  top: -12px;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #B8860B 0%, #966F09 100%);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.feature-icon {
  margin-bottom: 1.5rem;
  color: #B8860B;
}

.feature-card h3 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.feature-card p {
  color: #D1D5DB;
  line-height: 1.7;
  margin-bottom: 1.5rem;
}

.feature-link {
  color: #B8860B;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  transition: gap 0.3s ease;
  text-decoration: none;
}

.feature-link:hover {
  gap: 1rem;
}

/* CTA Section */
.cta-section {
  background: linear-gradient(135deg, #2A2A2A 0%, #1C1C1C 100%);
  padding: 5rem 0;
  border-top: 2px solid #3A3A3A;
}

.cta-content {
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
}

.cta-content h2 {
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, #B8860B 0%, #FFD700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.cta-content p {
  font-size: 1.25rem;
  color: #D1D5DB;
  margin-bottom: 2rem;
  line-height: 1.6;
}

.cta-buttons {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

.btn-large {
  padding: 1.25rem 2.5rem;
  font-size: 1.1rem;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .hero-section {
    height: 50vh;
    min-height: 400px;
    margin-top: 0;
    padding-top: 0;
  }
  
  .hero-content {
    padding: 1.5rem;
  }
  
